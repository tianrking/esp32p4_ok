			default ESP_HOSTED_SPI_HSPI

			config ESP_HOSTED_SPI_HSPI
				bool "HSPI/FSPI"
				help
					"HSPI/FSPI: SPI_controller_1"

			config ESP_HOSTED_SPI_VSPI
